{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "title": "EdaInfo Data Series",
    "type": "object",
    "description": "This schema represents a eda data series, i.e., an array of measures that share the same header.",

    "definitions": {
        "header": {
            "$ref": "sensor-device-header-1.x.json"
        },
        
        "eda_body": {
            "$ref": "eda-1.x.json"
        },

        "filter": {
            "$ref": "healthcare-filterbase-1.x.json"
        }
    },


    "properties": {
        "header": {
            "description": "The header of the data point.",
            "type":"object",
            "allOf": [
                {"$ref": "#/definitions/header"},

                {"$ref": "#/definitions/filter"},

                {
                    "type": "object",
                    "properties": {
                        "eda_info": {
                            "type": "object",
                            "properties": {

                                "sampling_frequency": {
                                    "allOf": [
                                        {
                                            "$ref": "#/definitions/unit_value"
                                        },
                                        { 
                                            "type": "object",
                                            "properties": {
                                                "unit": {
                                                    "enum": [
                                                        "Hz"
                                                    ]
                                                }
                                            }
                                        }
                                    ]
                                },

                                "window_size_samples": {
                                    "description": "Number of samples per EDA.msg",
                                    "type": "integer"
                                },
                            
                                "quality_window_size_samples": {
                                    "description": "Number of samples per quality value",
                                    "type": "integer"
                                },

                                "units": {
                                    "type": "string",
                                    "enum": ["Unknown", "Micro Siemens", "Counts"]
                                },

                                "gain": {
                                    "type": "number",
                                    "description": "Multiplicative factor (e.g., ÂµV/count); set to 1.0 if signal is already scaled"
                                },

                                "adc_resolution": {
                                    "description": "Bits (e.g. 12, 16)",
                                    "type": "integer"
                                },

                                "electrode_placement": {
                                    "description": "Support multiple electrode placements",
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "enum": [
                                            "Unknown", "Palm", "Fingertip", "Wrist", "Forearm", "Sole", "Shoulder", "Custom"
                                        ]
                                    }
                                },

                                "signal_mode": {
                                    "type": "string",
                                    "enum": ["Unknown", "Surface", "Intracutaneous", "Custom"]
                                },

                                "measuring_technique": {
                                    "type": "string",
                                    "enum": ["Unknown", "Endosomatic", "Exosomatic", "Custom"]
                                },

                                "current_form": {
                                    "type": "string",
                                    "enum": ["Unknown", "DC", "AC"]
                                }
                            },

                            "required": [
                                "sampling_frequency", "units"
                            ]
                        }
                    }
                }
            ]
        },

        "body": {
            "$ref": "#/definitions/eda_body"
        }
    },

    "required": [
        "header",
        "body"
    ]
}
