{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "title": "EdaInfo Data Series",
    "type": "object",
    "description": "This schema represents a eda data series, i.e., an array of measures that share the same header.",

    "definitions": {
        "device-info": {
            "$ref": "device-info-1.x.json"
        },
        "default-header": {
            "$ref": "ord-default-header-1.x.json"
        },
        "filter": {
            "$ref": "healthcare-filterbase-1.x.json"
        },
        "eda_body": {
            "$ref": "eda-1.x.json"
        }
    },


    "properties": {
        "header": {
            "description": "The header of the data point.",
            "type":"object",
            "allOf": [
                {"$ref": "#/definitions/default-header"},
                {"$ref": "#/definitions/device-info"},
                {"$ref": "#/definitions/filter"},

                {
                    "type": "object",
                    "properties": {
                        "electrode_configuration": {
                            "type": "object",
                            "properties": {
                                "electrode_placement": {
                                    "description": "Support multiple electrode placements",
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "enum": [
                                            "Unknown", "Palm", "Fingertip", "Wrist", "Forearm", "Sole", "Shoulder", "Custom"
                                        ]
                                    }
                                },

                                "electrode_type": {
                                    "type": "string",
                                    "enum": ["Unknown", "Surface", "Intracutaneous", "Custom"]
                                },

                                "measuring_technique": {
                                    "type": "string",
                                    "enum": ["Unknown", "Endosomatic", "Exosomatic", "Custom"]
                                },

                                "current_form": {
                                    "type": "string",
                                    "enum": ["Unknown", "DC", "AC"]
                                }
                            },

                            "required": [
                                "electrode_placement"
                            ]
                        }
                    }
                }
            ]
        },

        "body": {
            "$ref": "#/definitions/eda_body"
        }
    },

    "required": [
        "header",
        "body"
    ]
}
