{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "title": "ECG Data Series",
    "type": "object",
    "description": "This schema represents a ecg data series, i.e., an array of measures that share the same header.",

    "definitions": {
        "device-info": {
            "$ref": "device-info-1.x.json"
        },
        "default-header": {
            "$ref": "ord-default-header-1.x.json"
        },
        "filter": {
            "$ref": "healthcare-filterbase-1.x.json"
        },
        "lead_location_enum": {
            "$ref": "lead-location-1.x.json"
        },
        "ecg_body":{
            "$ref": "ecg-1.x.json"
        }
    },


    "properties": {
        "header": {
            "description": "The header of the data point.",
            "type":"object",
            "allOf": [
                {"$ref": "#/definitions/default-header"},
                {"$ref": "#/definitions/device-info"},
                {"$ref": "#/definitions/filter"},

                {
                    "type": "object",
                    "properties": {
                        "electrode_configuration": {
                            "type": "object",
                            "properties": {

                                "electrode_placement": {
                                    "description": "Support multiple electrode placements",
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "enum": [
                                            "Unknown", "Placement Limb", "Wrist Ankle", "Chest", "Torso", "Abdomen", "Back", "Ear", "Neck", "Left Arm", "Right Arm", "Left Leg", "Right Leg", "Custom"
                                        ]
                                    }
                                },

                                "lead_type": {
                                    "$ref": "#/definitions/lead_location_enum"
                                }
                            },

                            "required": [
                                "electrode_placement"
                            ]
                        }
                    }
                }
            ]
        },

        "body": {
            "$ref": "#/definitions/ecg_body"
        }
    },

    "required": [
        "header",
        "body"
    ]
}
