{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "title": "EEGInfo Data Series",
    "type": "object",
    "description": "This schema represents a eeg data series, i.e., an array of measures that share the same header.",

    "definitions": {
        "header": {
            "$ref": "sensor-device-header-1.x.json"
        },
        
        "eeg_body": {
            "$ref": "eeg-1.x.json"
        },

        "filter": {
            "$ref": "healthcare-filterbase-1.x.json"
        }
    },


    "properties": {
        "header": {
            "description": "The header of the data point.",
            "type":"object",
            "allOf": [
                {"$ref": "#/definitions/header"},

                {"$ref": "#/definitions/filter"},

                {
                    "type": "object",
                    "properties": {
                        "eeg_info": {
                            "type": "object",
                            "properties": {

                                "sampling_frequency": {
                                    "allOf": [
                                        {
                                            "$ref": "#/definitions/unit_value"
                                        },
                                        { 
                                            "type": "object",
                                            "properties": {
                                                "unit": {
                                                    "enum": [
                                                        "Hz"
                                                    ]
                                                }
                                            }
                                        }
                                    ]
                                },

                                "window_size_samples": {
                                    "description": "Number of samples per EEG.msg",
                                    "type": "integer"
                                },
                            
                                "quality_window_size_samples": {
                                    "description": "Number of samples per quality value",
                                    "type": "integer"
                                },

                                "units": {
                                    "type": "string",
                                    "enum": ["Unknown", "uV", "mV", "Counts"]
                                },

                                "gain": {
                                    "type": "number",
                                    "description": "Multiplicative factor (e.g., ÂµV/count); set to 1.0 if signal is already scaled"
                                },

                                "adc_resolution": {
                                    "description": "Bits (e.g. 12, 16)",
                                    "type": "integer"
                                },

                                "electrode_placement": {
                                    "description": "Support multiple electrode placements",
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "enum": [
                                            "Unknown", "Method 1020", "Method 1010", "Method 105", "Custom"
                                        ]
                                    }
                                },

                                "electrode_site": {
                                    "type": "string",
                                    "enum": ["Unknown", "FP1", "FP2", "F3", "F4", "C3", "C4", "P3", "P4", "O1", "O2", "F7", "F8", "T3", "T4", "T5", "T6", "FZ", "CZ", "PZ", "OZ", "Custom"]
                                },

                                "electrode_physical_type": {
                                    "type": "string",
                                    "enum": ["Unknown", "AgCl", "Gold Cup", "Dry", "Wet", "Hydrogel", "Microneedle", "Custom"]
                                },

                                "signal_mode": {
                                    "type": "string",
                                    "enum": ["Unknown", "Surface", "Intracranial", "Custom"]
                                }
                            },

                            "required": [
                                "sampling_frequency", "units"
                            ]
                        }
                    }
                }
            ]
        },

        "body": {
            "$ref": "#/definitions/eeg_body"
        }
    },

    "required": [
        "header",
        "body"
    ]
}
