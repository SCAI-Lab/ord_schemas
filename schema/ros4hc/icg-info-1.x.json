{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "title": "ICGInfo Data Series",
    "type": "object",
    "description": "This schema represents a icg data series, i.e., an array of measures that share the same header.",

    "definitions": {
        "header": {
            "$ref": "sensor-device-header-1.x.json"
        },
        
        "icg_body": {
            "$ref": "icg-1.x.json"
        },

        "filter": {
            "$ref": "healthcare-filterbase-1.x.json"
        },

        "unit_value": {
            "$ref": "unit-value-1.0.json"
        }
    },


    "properties": {
        "header": {
            "description": "The header of the data point.",
            "type":"object",
            "allOf": [
                {"$ref": "#/definitions/header"},

                {"$ref": "#/definitions/filter"},

                {
                    "type": "object",
                    "properties": {
                        "icg_info": {
                            "type": "object",
                            "properties": {

                                "sampling_frequency": {
                                    "allOf": [
                                        {
                                            "$ref": "#/definitions/unit_value"
                                        },
                                        { 
                                            "type": "object",
                                            "properties": {
                                                "unit": {
                                                    "enum": [
                                                        "Hz"
                                                    ]
                                                }
                                            }
                                        }
                                    ]
                                },

                                "window_size_samples": {
                                    "description": "Number of samples per ICG.msg",
                                    "type": "integer"
                                },
                            
                                "quality_window_size_samples": {
                                    "description": "Number of samples per quality value",
                                    "type": "integer"
                                },

                                "units": {
                                    "type": "string",
                                    "enum": ["Unknown", "Ohms", "MOhms", "Counts"]
                                },

                                "gain": {
                                    "type": "number",
                                    "description": "Multiplicative factor (e.g., ÂµV/count); set to 1.0 if signal is already scaled"
                                },

                                "adc_resolution": {
                                    "description": "Bits (e.g. 12, 16)",
                                    "type": "integer"
                                },

                                "electrode_placement": {
                                    "description": "Support multiple electrode placements",
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "enum": ["Unknown", "Chest", "Back", "Left Arm", "Right Arm", "Left Leg", "Right Leg", "Neck", "Abdomen", "Custom"]
                                    }
                                },

                                "lead_type": {
                                    "type": "string",
                                    "enum": ["Unknown", "Transthoracic", "Four Electrode", "Six Electrode", "Spot", "Custom"]
                                },

                                "technique": {
                                    "type": "string",
                                    "enum": ["Unknown", "Tetrapolar", "Octapolar", "Custom"]
                                }
                            },

                            "required": [
                                "sampling_frequency", "units"
                            ]
                        }
                    }
                }
            ]
        },

        "body": {
            "$ref": "#/definitions/icg_body"
        }
    },

    "required": [
        "header",
        "body"
    ]
}
