{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "title": "EOGInfo Data Series",
    "type": "object",
    "description": "This schema represents a eog data series, i.e., an array of measures that share the same header.",

    "definitions": {
        "header": {
            "$ref": "sensor-device-header-1.x.json"
        },
        
        "eog_body": {
            "$ref": "eog-1.x.json"
        },

        "filter": {
            "$ref": "healthcare-filterbase-1.x.json"
        },

        "unit_value": {
            "$ref": "unit-value-1.0.json"
        }
    },


    "properties": {
        "header": {
            "description": "The header of the data point.",
            "type":"object",
            "allOf": [
                {"$ref": "#/definitions/header"},

                {"$ref": "#/definitions/filter"},

                {
                    "type": "object",
                    "properties": {
                        "eog_info": {
                            "type": "object",
                            "properties": {

                                "sampling_frequency": {
                                    "allOf": [
                                        {
                                            "$ref": "#/definitions/unit_value"
                                        },
                                        { 
                                            "type": "object",
                                            "properties": {
                                                "unit": {
                                                    "enum": [
                                                        "Hz"
                                                    ]
                                                }
                                            }
                                        }
                                    ]
                                },

                                "window_size_samples": {
                                    "description": "Number of samples per EOG.msg",
                                    "type": "integer"
                                },
                            
                                "quality_window_size_samples": {
                                    "description": "Number of samples per quality value",
                                    "type": "integer"
                                },

                                "units": {
                                    "type": "string",
                                    "enum": ["Unknown", "uV", "mV", "Counts"]
                                },

                                "gain": {
                                    "type": "number",
                                    "description": "Multiplicative factor (e.g., ÂµV/count); set to 1.0 if signal is already scaled"
                                },

                                "adc_resolution": {
                                    "description": "Bits (e.g. 12, 16)",
                                    "type": "integer"
                                },

                                "electrode_placement": {
                                    "description": "Support multiple electrode placements",
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "enum": ["Unknown", "Left Eye", "Right Eye", "Forehead", "Temple Left", "Temple Right", "Above Eye", "Below Eye", "Custom"]
                                    }
                                },

                                "lead_type": {
                                    "type": "string",
                                    "enum": ["Unknown", "Bipolar Horizontal", "Bipolar Vertical", "Unipolar", "Corneal Retinal", "Custom"]
                                },

                                "signal_mode": {
                                    "type": "string",
                                    "enum": ["Unknown", "Surface", "Bipolar", "Unipolar", "Corneal Retinal", "Intracular", "Derived", "Custom"]
                                },

                                "lightsource": {
                                    "type": "string",
                                    "enum": ["Unknown", "Tungsten", "Halogen", "LED", "Fluorescent", "Sunlight", "Custom"]
                                },

                                "gazefield_background_light_brightness": {
                                    "allOf": [
                                        {
                                            "$ref": "#/definitions/unit_value"
                                        },
                                        { 
                                            "type": "object",
                                            "properties": {
                                                "unit": {
                                                    "enum": [
                                                        "cd/m^2"
                                                    ]
                                                }
                                            }
                                        }
                                    ]
                                },

                                "length_light_dark_phase" : {
                                    "type": "array",
                                    "items": {
                                        "type": "number"
                                    }
                                }
                            },

                            "required": [
                                "sampling_frequency", "units"
                            ]
                        }
                    }
                }
            ]
        },

        "body": {
            "$ref": "#/definitions/eog_body"
        }
    },

    "required": [
        "header",
        "body"
    ]
}
