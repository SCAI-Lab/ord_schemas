{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "title": "PPGInfo Data Series",
    "type": "object",
    "description": "This schema represents a ppg data series, i.e., an array of measures that share the same header.",

    "definitions": {
        "device-info": {
            "$ref": "device-info-1.x.json"
        },
        "default-header": {
            "$ref": "ord-default-header-1.x.json"
        },
        "filter": {
            "$ref": "healthcare-filterbase-1.x.json"
        },
        "ppg_body": {
            "$ref": "ppg-1.x.json"
        },
        "unit_value": {
            "$ref": "unit-value-1.0.json"
        }
    },


    "properties": {
        "header": {
            "description": "The header of the data point.",
            "type":"object",
            "allOf": [
                {"$ref": "#/definitions/default-header"},
                {"$ref": "#/definitions/device-info"},
                {"$ref": "#/definitions/filter"},

                {
                    "type": "object",
                    "properties": {
                        "sensor_configuration": {
                            "type": "object",
                            "properties": {

                                "sensor_placement": {
                                    "type": "string",
                                    "enum": ["Unknown", "Finger", "Wrist", "Earlobe", "Forehead", "Toe", "Arm", "Chest", "Ankle", "Nose", "Palm", "Sole", "Custom"]
                                },

                                "measuring_mode": {
                                    "type": "string",
                                    "enum": ["Unknown", "Transmissive Absorption", "Reflective", "Custom"]
                                }
                            },

                            "required": [
                                "sensor_placement"
                            ]
                        },

                        "waveform_configuration":{
                            "type": "object",
                            "properties": {
                                "wavelengths_mm": {
                                    "description": "Nanometer value for each channel, may be [660, 880, 940]",
                                    "type": "array",
                                    "items": {
                                        "type": "integer"
                                    }
                                },
                                "wavelengths_labels": {
                                    "description": "Wavelength Label for each channel (optional)",
                                    "type": "string",
                                    "enum": ["Unknown", "Green", "Red", "IR", "Blue", "Yellow", "Custom"]
                                }
                            },
                            "required": [
                                "wavelengths_mm"
                            ]
                        }
                    }
                }
            ]
        },

        "body": {
            "$ref": "#/definitions/ppg_body"
        }
    },

    "required": [
        "header",
        "body"
    ]
}
