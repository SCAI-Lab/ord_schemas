{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "title": "PPGInfo Data Series",
    "type": "object",
    "description": "This schema represents a ppg data series, i.e., an array of measures that share the same header.",

    "definitions": {
        "header": {
            "$ref": "sensor-device-header-1.x.json"
        },
        
        "ppg_body": {
            "$ref": "ppg-1.x.json"
        },

        "filter": {
            "$ref": "healthcare-filterbase-1.x.json"
        },

        "unit_value": {
            "$ref": "unit-value-1.0.json"
        }
    },


    "properties": {
        "header": {
            "description": "The header of the data point.",
            "type":"object",
            "allOf": [
                {"$ref": "#/definitions/header"},

                {"$ref": "#/definitions/filter"},

                {
                    "type": "object",
                    "properties": {
                        "ppg_info": {
                            "type": "object",
                            "properties": {

                                "sampling_frequency": {
                                    "allOf": [
                                        {
                                            "$ref": "#/definitions/unit_value"
                                        },
                                        { 
                                            "type": "object",
                                            "properties": {
                                                "unit": {
                                                    "enum": [
                                                        "Hz"
                                                    ]
                                                }
                                            }
                                        }
                                    ]
                                },

                                "window_size_samples": {
                                    "description": "Number of samples per ICG.msg",
                                    "type": "integer"
                                },
                            
                                "quality_window_size_samples": {
                                    "description": "Number of samples per quality value",
                                    "type": "integer"
                                },

                                "units": {
                                    "type": "string",
                                    "enum": ["Unknown", "mV", "uV", "RLU", "Counts"]
                                },

                                "gain": {
                                    "type": "number",
                                    "description": "Multiplicative factor (e.g., ÂµV/count); set to 1.0 if signal is already scaled"
                                },

                                "wavelengths_mm": {
                                    "description": "One entry per PPG channel; may be [660, 880, 940]",
                                    "type": "integer"
                                },

                                "sensor_placement": {
                                    "type": "string",
                                    "enum": ["Unknown", "Finger", "Wrist", "Earlobe", "Forehead", "Toe", "Arm", "Chest", "Ankle", "Nose", "Palm", "Sole", "Custom"]
                                },

                                "measuring_mode": {
                                    "type": "string",
                                    "enum": ["Unknown", "Transmissive Absorption", "Reflective", "Custom"]
                                }
                            },

                            "required": [
                                "sampling_frequency", "units"
                            ]
                        }
                    }
                }
            ]
        },

        "body": {
            "$ref": "#/definitions/ppg_body"
        }
    },

    "required": [
        "header",
        "body"
    ]
}
