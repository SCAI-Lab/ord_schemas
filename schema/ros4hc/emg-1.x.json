{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "EMG Data",
    "description": "This schema represents EMG waveform segments with associated signal quality and recording timestamps.",
    "type": "object",

    "definitions": {
        "time_frame": {
            "$ref": "time-frame-1.0.json"
        },
        "time_interval": {
            "$ref": "time-interval-1.0.json"
        }
    },

    "properties": {
        "session_id": {
            "description": "match EMGInfo's session_id (if used)",
            "type": "string"
        },

        "channel_size": {
            "type": "integer"
        },

        "sample_size": {
            "type": "integer"
        },
        
        "emg": {
            "description": "Raw or filtered EMG values",
            "type": "array",
            "items": {
                "type": "number"
            }
        },

        "signal_quality": {
            "description": "From 0 (poor) to 1 [%]",
            "type": "array",
            "items": {
                "type": "number",
                "maximum": 1,
                "minimum": 0
            }
        },

        "effective_time_frame": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["time_interval"]
                }
            ]
        }
    },

    "required": [
        "emg", 
        "signal_quality", 
        "effective_time_frame"
    ]
}
