{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ECG Data",
    "description": "This schema represents ECG waveform segments with associated signal quality and recording timestamps.",
    "type": "object",

    "definitions": {
        "time_frame": {
            "$ref": "time-frame-1.0.json"
        }
    },

    "properties": {
        "ecg_episodes": {
            "description": "ECG waveform samples",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "ecg_value": {
                        "type": "number",
                        "description": "EDA signal amplitude"
                    },
                    "unit": {
                        "type": "string",
                        "enum": ["ÂµV", "mV"]
                    },
                    "signal_quality": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 1,
                        "description": "Signal quality score (0-1)"
                    },
                    "ecg_time_frame":{
                        "description": "Timestamp when this sample was recorded",
                        "allOf": [
                            {
                                "$ref": "#/definitions/time_frame"
                            },
                            {
                                "required": [
                                    "date_time" 
                                ]
                            }
                        ]
                    }
                },
                "required": ["ecg_value", "signal_quality", "unit", "ecg_time_frame"]
            }
        },
        "effective_time_frame": {
            "allOf": [
                {
                "$ref": "#/definitions/time_frame"
                },
                {
                "required": ["time_interval"]
                }
            ]
        }
    },

  "required": ["ecg_episodes", "effective_time_frame"]
}
