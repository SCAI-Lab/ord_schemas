{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "title": "EMGInfo Data Series",
    "type": "object",
    "description": "This schema represents a emg data series, i.e., an array of measures that share the same header.",

    "definitions": {
        "header": {
            "$ref": "sensor-device-header-1.x.json"
        },
        
        "emg_body": {
            "$ref": "emg-1.x.json"
        },

        "filter": {
            "$ref": "healthcare-filterbase-1.x.json"
        }
    },


    "properties": {
        "header": {
            "description": "The header of the data point.",
            "type":"object",
            "allOf": [
                {"$ref": "#/definitions/header"},

                {"$ref": "#/definitions/filter"},

                {
                    "type": "object",
                    "properties": {
                        "emg_info": {
                            "type": "object",
                            "properties": {

                                "sampling_frequency": {
                                    "allOf": [
                                        {
                                            "$ref": "#/definitions/unit_value"
                                        },
                                        { 
                                            "type": "object",
                                            "properties": {
                                                "unit": {
                                                    "enum": [
                                                        "Hz"
                                                    ]
                                                }
                                            }
                                        }
                                    ]
                                },

                                "window_size_samples": {
                                    "description": "Number of samples per EMG.msg",
                                    "type": "integer"
                                },
                            
                                "quality_window_size_samples": {
                                    "description": "Number of samples per quality value",
                                    "type": "integer"
                                },

                                "units": {
                                    "type": "string",
                                    "enum": ["Unknown", "uV", "mV", "Counts"]
                                },

                                "gain": {
                                    "type": "number",
                                    "description": "Multiplicative factor (e.g., ÂµV/count); set to 1.0 if signal is already scaled"
                                },

                                "adc_resolution": {
                                    "description": "Bits (e.g. 12, 16)",
                                    "type": "integer"
                                },

                                "electrode_placement": {
                                    "description": "Support multiple electrode placements",
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "enum": ["Unknown", "Biceps", "Triceps", "Forearm", "Calf", "Back", "Abdomen", "Quadriceps", "Hamstring", "Face", "Neck", "Custom"]
                                    }
                                },

                                "electrode_type": {
                                    "type": "string",
                                    "enum": ["Unknown", "Surface", "Needle", "Wire", "Interferential", "Custom"]
                                },

                                "external_device": {
                                    "type": "string",
                                    "enum": ["Unknown", "TENS", "FES", "EMG Trigger", "Custom"]
                                },

                                "signal_mode": {
                                    "type": "string",
                                    "enum": ["Unknown", "Surface", "Intramuscular", "Custom"]
                                }
                            },

                            "required": [
                                "sampling_frequency", "units"
                            ]
                        }
                    }
                }
            ]
        },

        "body": {
            "$ref": "#/definitions/emg_body"
        }
    },

    "required": [
        "header",
        "body"
    ]
}
