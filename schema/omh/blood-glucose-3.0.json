{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema represents a person's blood glucose level.",
    "type": "object",

    "references": [
        {
            "description": "The LOINC code refers to Glucose [Mass/volume] in Blood (mg/dL)",
            "url": "http://purl.bioontology.org/ontology/LNC/2339-0"
        },
        {
            "description": "The LOINC code refers to Glucose [Moles/volume] in Blood (mmol/L)",
            "url": "http://purl.bioontology.org/ontology/LNC/15074-8"
        }
    ],
    "definitions": {
        "unit_value": {
            "$ref": "unit-value-1.x.json"
        },
        "specimen_source": {
            "$ref": "specimen-source-2.x.json"
        },
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        },
        "temporal_relationship_to_meal": {
            "$ref": "temporal-relationship-to-meal-1.x.json"
        },
        "temporal_relationship_to_sleep": {
            "$ref": "temporal-relationship-to-sleep-1.x.json"
        },
        "descriptive_statistic": {
            "$ref": "descriptive-statistic-1.x.json"
        }
    },

    "properties": {
        "blood_glucose": {
            "allOf": [
                {
                    "$ref": "#/definitions/unit_value"
                },
                {
                    "properties": {
                        "unit": {
                            "enum": [
                                "mg/dL",
                                "mmol/L"
                            ]
                        }
                    }
                }
            ]
        },
        "specimen_source": {
            "$ref": "#/definitions/specimen_source"
        },
        "effective_time_frame": {
            "$ref": "#/definitions/time_frame"
        },
        "temporal_relationship_to_meal": {
            "$ref": "#/definitions/temporal_relationship_to_meal"
        },
        "temporal_relationship_to_sleep": {
            "$ref": "#/definitions/temporal_relationship_to_sleep"
        },
        "descriptive_statistic": {
            "$ref": "#/definitions/descriptive_statistic"
        }
    },
    "required": [
        "blood_glucose",
        "effective_time_frame"
    ]
}